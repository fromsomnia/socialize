<div class="container" id="delete-account-form">
	<div id="delete-account-question">
		<h3>Are you sure you want to delete this event?</h3>
		<p>This action cannot be undone</p>
	</div>
	<form action="/users/delete" class="form-horizontal" role="form">
	  <div class="form-group">
	    <div class="col-sm-offset-2 col-sm-10">
	    	<button class="btn btn-danger btn-block" id="update_button">Delete Event</button>
	    </div>
	  </div>
	  <div class="form-group">
	  		<div class="container col-sm-offset-2 col-sm-10 cancel-back-button">
				<%= link_to_function "Keep Event", "history.back()", class: "btn btn-primary btn-block" %>
	    	</div>
	  </div>
	</form>
</div>