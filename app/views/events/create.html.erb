<div class="container" id="create-event-form">
	<% if @new_event.errors.any? %>
		<h3 class="error-message">Errors: <%= pluralize(@new_event.errors.count, "error") %> prohibited this record from being saved</h3>
		<ul>
			<% @new_event.errors.full_messages.each do |msg| %>
				<li class="error-message"><%= msg %></li>
			<% end %>
		</ul>
	<% end %>
	<%= form_for @new_event, url: {action: "save"}, html: {class: "form-horizontal", role: "form"} do |f|%>
		<div class="form-group">
	  		<%= label_tag(:title, "Title", class: "col-sm-2 control-label" ) %>
	    	<div class="col-sm-10">
	    		<%= f.text_field(:title, class: "form-control", placeholder: "Title") %>
	    	</div>
	    </div>
	    <div class="form-group">
	  		<%= label_tag(:description, "Description", class: "col-sm-2 control-label") %>
	    	<div class="col-sm-10">
	    		<%= f.text_area(:description, class: "form-control about-field", placeholder: "Description...") %>
	    	</div>
	    </div>
	    <div class="form-group">
	  		<%= label_tag(:date, "Date", class: "col-sm-2 control-label" ) %>
	    	<div class="col-sm-10">
	    		<%= f.text_field(:date, class: "form-control", id: "datepicker", placeholder: "Select Date") %>
	    	</div>
	    </div>
		<div class="form-group">
	  		<%= label_tag(:time, "Time", class: "col-sm-2 control-label" ) %>
	    	<div class="col-sm-10">
	    		<%= f.text_field(:time, class: "form-control", placeholder: "Select Time") %>
	    	</div>
	    </div>
	  	<div class="form-group">
	  		<%= label_tag(:place, "Venue Name", class: "col-sm-2 control-label" ) %>
	    	<div class="col-sm-10">
	    		<%= f.text_field(:place, class: "form-control", placeholder: "Venue Name") %>
	    	</div>
	    </div>
	    <div class="form-group">
	  		<%= label_tag(:address, "Address", class: "col-sm-2 control-label" ) %>
	    	<div class="col-sm-10">
	    		<%= f.text_field(:address, class: "form-control", placeholder: "Address") %>
	    	</div>
	    </div>
	  	<div class="form-group">
	    	<div class="col-sm-offset-2 col-sm-10">
	    		<%= f.submit "Create Event", class: "btn btn-primary btn-block", id: "create-event-button" %>
	    	</div>
	  	</div>
	  	<div class="form-group">
	  		<div class="container col-sm-offset-2 col-sm-10 cancel-back-button">
				<%= link_to_function "Cancel", "history.back()", class: "btn btn-danger btn-block" %>
	    	</div>
	  	</div>
	  	<%= f.text_field(:creator, class: "form-control hidden", value:"#{session[:user_id]}") %>
	<% end %>
</div>
