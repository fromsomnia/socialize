<div class="container" id="create-event-form">
	<%= form_for @new_event, url: {action: "save"}, html: {class: "form-horizontal", role: "form"} do |f|%>
		<div class="form-group">
	  		<%= label_tag(:title, "Title", class: "col-sm-2 control-label" ) %>
	    	<div class="col-sm-10">
	    		<%= f.text_field(:title, class: "form-control", placeholder: "Title") %>
	    	</div>
	    </div>
	    <div class="form-group">
	  		<%= label_tag(:description, "Description", class: "col-sm-2 control-label") %>
	    	<div class="col-sm-10">
	    		<%= f.text_area(:description, class: "form-control about-field", placeholder: "Description...") %>
	    	</div>
	    </div>
	    <div class="form-group">
	  		<%= label_tag(:date, "Date", class: "col-sm-2 control-label" ) %>
	    	<div class="col-sm-10">
	    		<%= f.text_field(:date, class: "form-control", placeholder: "Select Date") %>
	    	</div>
	    </div>
		<div class="form-group">
	  		<%= label_tag(:time, "Time", class: "col-sm-2 control-label" ) %>
	    	<div class="col-sm-10">
	    		<%= f.text_field(:time, class: "form-control", placeholder: "Select Time") %>
	    	</div>
	    </div>
	  	<div class="form-group">
	  		<%= label_tag(:place, "Date", class: "col-sm-2 control-label" ) %>
	    	<div class="col-sm-10">
	    		<%= f.text_field(:place, class: "form-control", placeholder: "Select Date") %>
	    	</div>
	    </div>
	  </div>
	  <div class="form-group">
	    <div class="col-sm-offset-2 col-sm-10">
	    	<%= f.submit "Create Account", class: "btn btn-primary btn-block", id: "login_button" %>
	    </div>
	  </div>
	<% end %>
</div>