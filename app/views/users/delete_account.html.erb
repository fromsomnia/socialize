<div class="container">
<div class="container" id="delete-account-form">
	<div id="delete-account-question">
		<h3>Are you sure you want to delete your accout?</h3>
		<p>This action cannot be undone</p>
	</div>
	<form action="/users/delete" class="form-horizontal" role="form">
	  <div class="form-group">
	    <div class="col-xs-offset-3 col-xs-6">
	    	<button class="btn btn-danger btn-block" id="update_button">Delete Account</button>
	    </div>
	  </div>
	  <div class="form-group">
	  		<div class="container col-xs-offset-3 col-xs-6 cancel-back-button">
				<%= link_to_function "Keep Account", "history.back()", class: "btn btn-primary btn-block" %>
	    	</div>
	  </div>
	</form>
</div>
</div>