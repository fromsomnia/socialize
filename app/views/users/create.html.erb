<div class="container" id="create-user-form">
	<% if @new_user.errors.any? %>
		<div class="errors-container">
			<h3 class="error-message">please fix the following errors to continue</h3>
			<ul>
				<% @new_user.errors.full_messages.each do |msg| %>
					<li class="error-message"><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	<%= form_for @new_user, url: {action: "save"}, html: {class: "form-horizontal", role: "form"} do |f|%>
		<div class="form-group">
	  		<%= label_tag(:first_name, "First Name", class: "col-sm-2 control-label" ) %>
	    	<div class="col-sm-10">
	    		<%= f.text_field(:first_name, class: "form-control", placeholder: "First Name") %>
	    	</div>
	    </div>
	    <div class="form-group">
	  		<%= label_tag(:last_name, "Last Name", class: "col-sm-2 control-label" ) %>
	    	<div class="col-sm-10">
	    		<%= f.text_field(:last_name, class: "form-control", placeholder: "Last Name") %>
	    	</div>
	    </div>
	    <div class="form-group">
	  		<%= label_tag(:description, "About Me", class: "col-sm-2 control-label") %>
	    	<div class="col-sm-10">
	    		<%= f.text_area(:description, class: "form-control about-field", placeholder: "About Me...") %>
	    	</div>
	    </div>
	    <div class="form-group">
	  		<%= label_tag(:image, "Add Profile Picture", class: "col-sm-2 control-label") %>
	    	<div class="col-sm-10">
	    		<%= f.file_field(:image, accept: "image/png,image/gif,image/jpeg", class: "form-control") %>
	    	</div>
	    </div>
	  <div class="form-group">
	  	<%= label_tag(:username, "Username", class: "col-sm-2 control-label" ) %>
	    <div class="col-sm-10">
	    	<%= f.text_field(:username, class: "form-control", placeholder: "Username") %>
	    </div>
	  </div>
	  <div class="form-group">
	    <%= label_tag(:password, "Password", class: "col-sm-2 control-label" ) %>
	    <div class="col-sm-10">
	    	<%= f.password_field(:password, class: "form-control", placeholder: "Password") %>
	    </div>
	  </div>
	  <div class="form-group">
	    <div class="col-sm-offset-2 col-sm-10">
	    	<%= f.submit "Create Account", class: "btn btn-primary btn-block", id: "login_button" %>
	    </div>
	  </div>
	  <div class="form-group">
	  		<div class="container col-sm-offset-2 col-sm-10 cancel-back-button">
				<%= link_to_function "Cancel", "history.back()", class: "btn btn-danger btn-block" %>
	    	</div>
	  </div>
	<% end %>
</div>

