<div class="container" id="create_user_form">
	<%= form_for @new_user, url: {action: "save"}, html: {class: "form-horizontal", role: "form"} do |f|%>
		<div class="form-group">
	  		<%= label_tag(:first_name, "First Name", class: "col-sm-2 control-label" ) %>
	    	<div class="col-sm-10">
	    		<%= f.text_field(:first_name, class: "form-control", placeholder: "First Name") %>
	    	</div>
	    </div>
	    <div class="form-group">
	  		<%= label_tag(:last_name, "Last Name", class: "col-sm-2 control-label" ) %>
	    	<div class="col-sm-10">
	    		<%= f.text_field(:last_name, class: "form-control", placeholder: "Last Name") %>
	    	</div>
	    </div>
	    <div class="form-group">
	  		<%= label_tag(:description, "About Me", class: "col-sm-2 control-label") %>
	    	<div class="col-sm-10">
	    		<%= f.text_area(:description, class: "form-control about-field", placeholder: "About Me...") %>
	    	</div>
	    </div>
	    <div class="form-group">
	  		<%= label_tag(:image_url, "Profile Picture URL", class: "col-sm-2 control-label") %>
	    	<div class="col-sm-10">
	    		<%= f.text_field(:image_url, class: "form-control", placeholder: "Insert URL Here") %>
	    	</div>
	    </div>
	  <div class="form-group">
	  	<%= label_tag(:username, "Username", class: "col-sm-2 control-label" ) %>
	    <div class="col-sm-10">
	    	<%= f.text_field(:username, class: "form-control", placeholder: "Username") %>
	    </div>
	  </div>
	  <div class="form-group">
	    <%= label_tag(:password, "Password", class: "col-sm-2 control-label" ) %>
	    <div class="col-sm-10">
	    	<%= f.password_field(:password, class: "form-control", placeholder: "Password") %>
	    </div>
	  </div>
	  <div class="form-group">
	    <div class="col-sm-offset-2 col-sm-10">
	    	<%= f.submit "Update", class: "btn btn-primary btn-block", id: "update_button" %>
	    </div>
	  </div>
	<% end %>
</div>