<% for user in users do %>
	<div class="container user center-block">
		<h3>
			<a href="/users/index/<%= user.id %>"><%= user.first_name + " " + user.last_name %></a>
		</h3>
		<img src="<%= user.image_url %>" class="img-responsive img-rounded" alt="<%= user.first_name %>">
		<p><%= user.description %></p>
		<hr>
		<h2>Attending:</h2>

		<% for event in user.events do %>
			<p>
				<a href="/events/index/<%= event.id %>"><%= event.title %></a>
			</p>
		<% end %>

		<form action="/users/delete_friend" class="form-horizontal" role="form">
			<% if !home_account then %>
	  			<div class="form-group">
	  				<input type="text" class="form-control hidden" name="user_id" id="accept-request-input" value="<%= user.id %>">
	    			<div class="col-sm-offset-2 col-sm-10">
	    				<button class="btn btn-danger btn-block" id="update_button">Remove Friend</button>
	    			</div>
	  			</div>
	  		<% end %>
	  		<div class="form-group">
	  			<div class="container col-sm-offset-2 col-sm-10 cancel-back-button">
					<%= link_to_function "Back", "history.back()", class: "btn btn-primary btn-block" %>
	    		</div>
	  		</div>
		</form>

	</div>
	<hr>
<% end %>