<!DOCTYPE html>
<html>
<head>
  <title>Cs147GroupWebsite</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="container jumbotron" id="app_header">
	<h1 id="website_title">SOCIALIZE</h1>
</div>

<% if !session[:user_id].nil? then %>
	<div class="bt-group btn-group-justified" id="logout_panel">
	<% logged_in_user = User.find(session[:user_id]) %>
		<a href="/events/logout" class="btn btn-info btn-block">Hi <%= logged_in_user.first_name %>! <span id="logout_badge" class="badge">Log Out</span></a>
	</div>
<% end %>

<div class="bt-group btn-group-justified" id="app_nav">
	<a href="/events/index" class="btn btn-primary active" id="home_button" role="button">Home <span id="home_badge" class="badge"></span></a>
	<a href="/users/index" class="btn btn-primary" id="friends_button" role="button">Friends <span id="friends_badge" class="badge"></span></a>

	<% home_account = "" %>
	<% if logged_in_user then %>
		<% home_account = logged_in_user.id %>
	<% end %>

	<a href="/users/index/<%= home_account %>" class="btn btn-primary" id="account_button" role="button">Account <span id="account_badge" class="badge"></span></a>
</div>

<% if controller.controller_name.eql?("users") && controller.action_name.eql?("index") %>
	<% if params[:id].to_i == session[:user_id].to_i then %>
  		<div class="bt-group btn-group-justified" id="logout_panel">
  			<a href="/users/edit/<%= params[:id] %>" class="btn btn-warning btn-block">Edit</a>
  		</div>
  	<% end %>
<% end %>


<%= yield %>

</body>
</html>
